# Required: Your Google Gemini API key
# Get one for free at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Optional: Hugging Face access token (for gated models like Llama-2)
HF_TOKEN=

# Optional: Kaggle API credentials (for dataset discovery)
KAGGLE_USERNAME=
KAGGLE_KEY=

# Auto-generated if not provided (production: set these manually)
SECRET_KEY=vf_dev_secret_key_change_in_production
JWT_SECRET_KEY=vf_jwt_secret_key_change_in_production

# Database
DATABASE_URL=sqlite:///./vibeflow.db

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Upload settings
MAX_UPLOAD_SIZE=100000000
UPLOAD_DIR=./uploads
MODELS_CACHE_DIR=./models_cache

# Development settings
DEBUG=true